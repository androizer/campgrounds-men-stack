<% include ..\partials\header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world.</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <% campData.forEach(function(camps) { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= camps.image %>">
                        <div class="caption">
                            <h4><%= camps.name %></h4>
                            <!-- <% console.log("Preparing all HREFs") %>      -->
                            <p> <a class="btn btn-primary" href="/campgrounds/<%= camps._id %>">Description</a> </p>               
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
</div>

<% include ..\partials\footer.ejs %>