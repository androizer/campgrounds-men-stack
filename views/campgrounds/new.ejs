<% include ..\partials\header.ejs %>

<div class="container text-center">
    <div class="row">
        <h1>Add a new Campground here!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="./" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name">                     
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">                    
                </div>
                <div class="form-group">
                    <textarea class="form-control" placeholder="description" name="description" cols="30" rows="10"></textarea>
                    <!-- <input class="form-control" type="text" placeholder="description" name="description">                     -->
                </div>
                <div class="form-group">
                    <span class="row">
                        <span class="col-md-5">
                            <button class="btn btn-success btn-lg btn-block">Submit!</button>                    
                        </span>
                        <span class="col-md-7">
                            <a class="btn btn-primary btn-lg btn-block" href="./">All Campgrounds</a>            
                        </span>
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>
