<% include ..\partials\header.ejs %>

<div class="container text-center">
    <div class="row">
        <h1>Edit <em>Comment</em></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campgroundID %>/comments/<%= comment._id %>" method="POST">
                <!-- [text], [author]-> these name shud be same as represented in Schema. -->
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="comment" name="comment[text]" 
                    value="<%= comment.text %>">                    
                </div>
                <div class="form-group">
                        <span class="row">
                            <span class="col-md-6">
                                <button class="btn btn-success btn-lg btn-block">Submit!</button>                    
                            </span>
                            <span class="col-md-6">
                                <a class="btn btn-primary btn-lg btn-block" href="../../">Back</a>                
                            </span>
                        </span>
                </div>
            </form>
        </div>
    </div>
</div>

